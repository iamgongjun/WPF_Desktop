                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- 标题 -->
                                            <Border Grid.Row="0" Background="#007ACC" CornerRadius="4" Padding="10,8" Margin="0,0,0,15">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="&#xE950;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="试剂管理" FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            
                                            <!-- 医院名称 -->
                                            <Grid Grid.Row="1" Margin="0,0,0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="医院名称:" Grid.Column="0" VerticalAlignment="Center" Foreground="#444444" Margin="0,0,10,0"/>
                                                <TextBox Grid.Column="1" Text="紫霞医X005" Height="36" Background="#F5F5F5" Padding="10,0" VerticalContentAlignment="Center" BorderBrush="#CCCCCC"/>
                                            </Grid>
                                            
                                            <!-- 试剂号 -->
                                            <Grid Grid.Row="2" Margin="0,0,0,15">
