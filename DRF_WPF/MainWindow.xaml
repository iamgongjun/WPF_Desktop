                                                <TextBox Height="36" Margin="0,0,0,15" Background="#F5F5F5" BorderBrush="#CCCCCC" Padding="10,0" VerticalContentAlignment="Center"/>
                                                
                                                <!-- 提示文字 -->
                                                <TextBlock Text="请输入授权码" HorizontalAlignment="Center" Foreground="#444444"/>
