                                                Background="#0078D4" Foreground="White" BorderThickness="0" FontSize="16">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid x:Name="HistoryPage" Visibility="Collapsed">
                        <!--  历史页面内容  -->
                    </Grid>
                    <Grid x:Name="UsersPage" Visibility="Collapsed">
                        <!--  用户管理页面内容  -->
                        <Border
                            Margin="15"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="6"
                            Effect="{StaticResource SoftShadow}">
                            <Grid Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="15" />
                                    <ColumnDefinition Width="300" />
                                </Grid.ColumnDefinitions>

                                <!--  标题和刷新按钮 -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,20">
                                    <TextBlock Text="用户管理" FontSize="24" Foreground="#333333" FontWeight="Medium"/>
                                    <Button x:Name="BtnRefreshUsers" Margin="15,0,0,0" ToolTip="刷新用户列表" 
                                            Click="BtnRefreshUsers_Click" 
                                            Background="Transparent" 
                                            BorderThickness="0" 
                                            Padding="8,5">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" 
                                                      Foreground="#1E88E5" FontSize="16" VerticalAlignment="Center"/>
                                            <TextBlock Text="刷新" Margin="5,0,0,0" Foreground="#1E88E5" 
                                                      FontSize="14" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>

                                <!--  用户列表 -->
                                <DataGrid x:Name="UsersDataGrid" Grid.Row="1" Grid.Column="0" 
                                          AutoGenerateColumns="False" 
                                          IsReadOnly="True" 
                                          SelectionMode="Single"
                                          SelectionChanged="UsersDataGrid_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                        <DataGridTextColumn Header="用户名" Binding="{Binding Username}" Width="100"/>
                                        <DataGridTextColumn Header="显示名称" Binding="{Binding DisplayName}" Width="120"/>
                                        <DataGridCheckBoxColumn Header="管理员" Binding="{Binding IsAdmin}" Width="60">
                                            <DataGridCheckBoxColumn.ElementStyle>
                                                <Style TargetType="CheckBox">
                                                    <Setter Property="IsHitTestVisible" Value="False"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                </Style>
                                            </DataGridCheckBoxColumn.ElementStyle>
                                        </DataGridCheckBoxColumn>
                                        <DataGridTextColumn Header="创建时间" Binding="{Binding CreatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="150"/>
                                        <DataGridTextColumn Header="最后登录" Binding="{Binding LastLoginTime, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="150"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!--  用户编辑区域  -->
                                <Border
                                    Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="2"
                                    Padding="15"
                                    Background="White"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    CornerRadius="6">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  表单标题  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Margin="0,0,0,15"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Text="用户信息" />

                                        <!--  表单区域  -->
                                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                            <StackPanel>
                                                <Border
                                                    Margin="0,0,0,15"
                                                    Padding="15,15"
                                                    Background="#F9F9F9"
                                                    CornerRadius="4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            Foreground="#444444"
                                                            Text="用户名:" />
                                                        <TextBox
                                                            x:Name="TxtUsername"
                                                            Grid.Column="1"
                                                            Height="32"
                                                            Padding="8,0"
                                                            VerticalContentAlignment="Center"
                                                            BorderBrush="#DDDDDD" />
                </Grid>
                                                </Border>

                                                <Border
                                                    Margin="0,0,0,15"
                                                    Padding="15,15"
                                                    Background="#F9F9F9"
                                                    CornerRadius="4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            Foreground="#444444"
                                                            Text="显示名称:" />
                                                        <TextBox
                                                            x:Name="TxtDisplayName"
                                                            Grid.Column="1"
                                                            Height="32"
                                                            Padding="8,0"
                                                            VerticalContentAlignment="Center"
                                                            BorderBrush="#DDDDDD" />
                                                    </Grid>
                                                </Border>

                                                <Border
                                                    Margin="0,0,0,15"
                                                    Padding="15,15"
                                                    Background="#F9F9F9"
                                                    CornerRadius="4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            Foreground="#444444"
                                                            Text="密码:" />
                                                        <PasswordBox
                                                            x:Name="PwdPassword"
                                                            Grid.Column="1"
                                                            Height="32"
                                                            Padding="8,0"
                                                            VerticalContentAlignment="Center"
                                                            BorderBrush="#DDDDDD" />
                                                    </Grid>
                                                </Border>

                                                <Border
                                                    Margin="0,0,0,15"
                                                    Padding="15,15"
                                                    Background="#F9F9F9"
                                                    CornerRadius="4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            Foreground="#444444"
                                                            Text="确认密码:" />
                                                        <PasswordBox
                                                            x:Name="PwdConfirmPassword"
                                                            Grid.Column="1"
                                                            Height="32"
                                                            Padding="8,0"
                                                            VerticalContentAlignment="Center"
                                                            BorderBrush="#DDDDDD" />
                                                    </Grid>
                                                </Border>

                                                <Border
                                                    Margin="0,0,0,15"
                                                    Padding="15,15"
                                                    Background="#F9F9F9"
                                                    CornerRadius="4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            Foreground="#444444"
                                                            Text="管理员权限:" />
                                                        <CheckBox
                                                            x:Name="ChkIsAdmin"
                                                            Grid.Column="1"
                                                            Margin="10,0,0,0"
                                                            VerticalAlignment="Center">
