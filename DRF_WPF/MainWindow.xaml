                                                <TextBlock Text="试剂编号:" Grid.Column="0" VerticalAlignment="Center" Foreground="#444444" Margin="0,0,10,0"/>
                                                <TextBox Grid.Column="1" Text="1763929263" Height="36" Background="#F5F5F5" Padding="10,0" VerticalContentAlignment="Center" BorderBrush="#CCCCCC"/>
                                            </Grid>
                                            
                                            <!-- 染色片数 -->
                                            <Grid Grid.Row="3" Margin="0,0,0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="染色片数:" Grid.Column="0" VerticalAlignment="Center" Foreground="#444444" Margin="0,0,10,0"/>
                                                <TextBox Grid.Column="1" Text="2000" Height="36" Background="#007ACC" Foreground="White" FontWeight="Bold" Padding="10,0" VerticalContentAlignment="Center" BorderBrush="#CCCCCC"/>
                                            </Grid>
                                            
                                            <!-- 已染色片数 -->
                                            <Grid Grid.Row="4" Margin="0,0,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="已染色片数:" Grid.Column="0" VerticalAlignment="Center" Foreground="#444444" Margin="0,0,10,0"/>
                                                <TextBox Grid.Column="1" Text="935" Height="36" Background="#F5F5F5" Padding="10,0" VerticalContentAlignment="Center" BorderBrush="#CCCCCC"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- 右侧面板：设备授权管理 -->
                                    <Border Grid.Row="0" Grid.Column="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Padding="15">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- 标题 -->
                                            <Border Grid.Row="0" Background="#007ACC" CornerRadius="4" Padding="10,8" Margin="0,0,0,15">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="&#xE192;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="授权管理" FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            
