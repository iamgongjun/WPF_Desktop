<Window
    x:Class="DRF_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DRF_WPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=""
        Width="1200"
        Height="800"
        AllowsTransparency="True"
        Background="White"
        ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
        mc:Ignorable="d">
    <Window.Resources>
        <!--  应用级样式和资源  -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="#666666" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CCCCCC" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 导航栏RadioButton样式 -->
        <Style x:Key="NavRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#666666" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                             VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#E3F2FD" />
                                <Setter Property="BorderBrush" Value="#2196F3" />
                                <Setter Property="Foreground" Value="#2196F3" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8E8E8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  顶部信息栏  -->
        <Grid
            Grid.Row="0"
            Background="#007ACC"
            MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Name="tbTitle"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="White"
                Text="" />

            <TextBlock
                x:Name="TimeDisplay"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White" />

            <StackPanel
                Grid.Column="2"
                Margin="0,0,40,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBlock
                    x:Name="UserDisplay"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="欢迎" />

                <Button
                    x:Name="UserManagementButton"
                    Margin="10,0,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="White"
                    ToolTip="用户管理"
                    Visibility="Collapsed">
                    <Path
                        Width="20"
                        Height="20"
                        Data="M12,4 C14.7614,4 17,6.23858 17,9 C17,11.7614 14.7614,14 12,14 C9.23858,14 7,11.7614 7,9 C7,6.23858 9.23858,4 12,4 M12,15 C17.5228,15 22,17.6863 22,21 L22,22 L2,22 L2,21 C2,17.6863 6.47715,15 12,15 Z"
                        Fill="White"
                        Stretch="Uniform" />
                </Button>

                <Button
                    x:Name="LogoutButton"
                    Margin="10,0,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="LogoutButton_Click"
                    Foreground="White"
                    ToolTip="注销" Visibility="Collapsed">
                    <Path
                        Width="20"
                        Height="20"
                        Data="M16,17V14H9V10H16V7L21,12L16,17M14,2A2,2 0 0,1 16,4V6H14V4H5V20H14V18H16V20A2,2 0 0,1 14,22H5A2,2 0 0,1 3,20V4A2,2 0 0,1 5,2H14Z"
                        Fill="White"
                        Stretch="Uniform" />
                </Button>

                <StackPanel Margin="15,0,0,0" Orientation="Horizontal">
                    <Button
                        x:Name="MinimizeButton"
                        Width="20"
                        Height="20"
                        Margin="0,0,10,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="MinimizeButton_Click"
                        Foreground="White">
                        <Path
                            Data="M19,13H5V11H19V13Z"
                            Fill="White"
                            Stretch="Uniform" />
                    </Button>
                    <Button
                        x:Name="MaximizeButton"
                        Width="20"
                        Height="20"
                        Margin="0,0,10,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="MaximizeButton_Click"
                        Foreground="White">
                        <Path
                            Data="M4,4H20V20H4V4M6,8V18H18V8H6Z"
                            Fill="White"
                            Stretch="Uniform" />
                    </Button>
                    <Button
                        x:Name="CloseButton"
                        Width="20"
                        Height="20"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="CloseButton_Click"
                        Foreground="White">
                        <Path
                            Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                            Fill="White"
                            Stretch="Uniform" />
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  顶部与内容区域的分割线  -->
        <Border
            Grid.Row="0"
            Height="2"
            VerticalAlignment="Bottom"
            Background="#0063A5" />

        <!--  主内容区域  -->
        <Border Grid.Row="1" Background="#F5F9FC">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  左侧导航栏  -->
                <Border
                    Grid.Column="0"
                    Background="#F0F0F0"
                    BorderBrush="#DDDDDD"
                    BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        
                        <!--  导航按钮  -->
                        <StackPanel Grid.Row="0" VerticalAlignment="Center">
                            <RadioButton
                                x:Name="btnProgram"
                                Width="100"
                                Height="100"
                                Checked="NavRadioButton_Checked"
                                GroupName="NavButtons"
                                IsChecked="True"
                                Style="{StaticResource NavRadioButtonStyle}">
                                <StackPanel>
                                    <Path
                                        Width="40"
                                        Height="40"
                                          Data="M3,3H21V21H3V3M7,7V9H9V7H7M11,7V9H13V7H11M15,7V9H17V7H15M7,11V13H9V11H7M11,11V13H13V11H11M15,11V13H17V11H15M7,15V17H9V15H7M11,15V17H13V15H11M15,15V17H17V15H15Z" 
                                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}" 
                                        Stretch="Uniform" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="14"
                                        Text="程序" />
                                </StackPanel>
                            </RadioButton>
                            <RadioButton
                                x:Name="btnMonitor"
                                Width="100"
                                Height="100"
                                Checked="NavRadioButton_Checked"
                                GroupName="NavButtons"
                                Style="{StaticResource NavRadioButtonStyle}">
                                <StackPanel>
                                    <Path
                                        Width="40"
                                        Height="40"
                                          Data="M21,16V4H3V16H21M21,2A2,2 0 0,1 23,4V16A2,2 0 0,1 21,18H14V20H16V22H8V20H10V18H3C1.89,18 1,17.1 1,16V4C1,2.89 1.89,2 3,2H21M5,6H14V11H5V6M15,6H19V8H15V6M19,9V14H15V9H19M5,12H9V14H5V12M10,12H14V14H10V12Z" 
                                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}" 
                                        Stretch="Uniform" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="14"
                                        Text="监控" />
                                </StackPanel>
                            </RadioButton>
                            <RadioButton
                                x:Name="btnRun"
                                Width="100"
                                Height="100"
                                Checked="NavRadioButton_Checked"
                                GroupName="NavButtons"
                                Style="{StaticResource NavRadioButtonStyle}">
                                <StackPanel>
                                    <Path
                                        Width="40"
                                        Height="40"
                                          Data="M8,5.14V19.14L19,12.14L8,5.14Z" 
                                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}" 
                                        Stretch="Uniform" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="14"
                                        Text="运行" />
                                </StackPanel>
                            </RadioButton>
                            <RadioButton
                                x:Name="btnCommon"
                                Width="100"
                                Height="100"
                                Checked="NavRadioButton_Checked"
                                GroupName="NavButtons"
                                Style="{StaticResource NavRadioButtonStyle}">
                                <StackPanel>
                                    <Path
                                        Width="40"
                                        Height="40"
                                          Data="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M10,10.5H5V9H10V10.5M14,14.5H5V13H14V14.5M19,18.5H5V17H19V18.5M19,10.5H14.5V9H19V10.5Z" 
                                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}" 
                                        Stretch="Uniform" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="14"
                                        Text="功能" />
                                </StackPanel>
                            </RadioButton>
                            <RadioButton
                                x:Name="btnSettings"
                                Width="100"
                                Height="100"
                                Checked="NavRadioButton_Checked"
                                GroupName="NavButtons"
                                Style="{StaticResource NavRadioButtonStyle}">
                                <StackPanel>
                                    <Path
                                        Width="40"
                                        Height="40"
                                          Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" 
                                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}" 
                                        Stretch="Uniform" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="14"
                                        Text="设置" />
                                </StackPanel>
                            </RadioButton>
                            <RadioButton
                                x:Name="btnHistory"
                                Width="100"
                                Height="100"
                                Checked="NavRadioButton_Checked"
                                GroupName="NavButtons"
                                Style="{StaticResource NavRadioButtonStyle}">
                                <StackPanel>
                                    <Path
                                        Width="40"
                                        Height="40"
                                          Data="M13.5,8H12V13L16.28,15.54L17,14.33L13.5,12.25V8M13,3A9,9 0 0,0 4,12H1L4.96,16.03L9,12H6A7,7 0 0,1 13,5A7,7 0 0,1 20,12A7,7 0 0,1 13,19C11.07,19 9.32,18.21 8.06,16.94L6.64,18.36C8.27,20 10.5,21 13,21A9,9 0 0,0 22,12A9,9 0 0,0 13,3" 
                                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}" 
                                        Stretch="Uniform" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="14"
                                        Text="历史" />
                                </StackPanel>
                            </RadioButton>
                            <RadioButton
                                x:Name="btnUsers"
                                Width="100"
                                Height="100"
                                Checked="NavRadioButton_Checked"
                                GroupName="NavButtons"
                                Style="{StaticResource NavRadioButtonStyle}">
                                <StackPanel>
                                    <Path
                                        Width="40"
                                        Height="40"
                                        Data="M16,13C15.71,13 15.38,13 15.03,13.05C16.19,13.89 17,15 17,16.5V19H23V16.5C23,14.17 18.33,13 16,13M8,13C5.67,13 1,14.17 1,16.5V19H15V16.5C15,14.17 10.33,13 8,13M8,11A3,3 0 0,0 11,8A3,3 0 0,0 8,5A3,3 0 0,0 5,8A3,3 0 0,0 8,11M16,11A3,3 0 0,0 19,8A3,3 0 0,0 16,5A3,3 0 0,0 13,8A3,3 0 0,0 16,11Z"
                                        Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                                        Stretch="Uniform" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="14"
                                        Text="用户" />
                                </StackPanel>
                            </RadioButton>
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  右侧内容区域  -->
                <Grid Grid.Column="1">
                    <!--  程序管理页面  -->
                    <Grid
                        x:Name="ProgramPage"
                        Margin="15"
                        Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="15" /> 
                            <!--  列之间的间隔  -->
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="15" /> 
                            <!--  列之间的间隔  -->
                            <ColumnDefinition Width="300" />
                        </Grid.ColumnDefinitions>

                        <!--  程序列表  -->
                        <Border
                            Grid.Column="0"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="6"
                            Effect="{StaticResource SoftShadow}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                
                                <!--  列表标题  -->
                                <Border
                                    Grid.Row="0"
                                    Padding="10,10"
                                    Background="#007ACC"
                                    CornerRadius="5,5,0,0">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        Text="程序名称" />
                                </Border>
                                
                                <!--  程序列表  -->
                                <ListBox
                                    x:Name="ProgramList"
                                        Grid.Row="1"
                                        Margin="0,10,0,0"
                                    Background="Transparent"
                                        BorderThickness="0"
                                    SelectionChanged="ProgramList_SelectionChanged"
                                    SelectionMode="Single">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding" Value="15,10" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border
                                                            x:Name="Border"
                                                            Padding="{TemplateBinding Padding}"
                                                                Background="{TemplateBinding Background}" 
                                                            BorderThickness="0">
                                                            <ContentPresenter />
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="Background" Value="#F0F7FF" />
                                                                <Setter Property="BorderBrush" Value="#007ACC" />
                                                                <Setter TargetName="Border" Property="BorderThickness" Value="0,0,0,0" />
                                                                <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC" />
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#F5F5F5" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                </ListBox>
                            </Grid>
                        </Border>

                        <!--  步骤列表  -->
                        <Border
                            Grid.Column="2"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="6"
                            Effect="{StaticResource SoftShadow}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--  表格标题栏  -->
                                <Border
                                    Grid.Row="0"
                                    Background="#007ACC"
                                    CornerRadius="5,5,0,0">
                                    <Grid>
                                        <TextBlock
                                            Padding="10,10"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="步骤列表" />
                                    </Grid>
                                </Border>

                                <!--  使用ScrollViewer包裹DataGrid支持水平滚动  -->
                                <ScrollViewer
                                    Grid.Row="1"
                                    Margin="0,10,0,0"
                                    HorizontalScrollBarVisibility="Visible"
                                    VerticalScrollBarVisibility="Disabled">
                                    <!--  数据表格  -->
                                    <DataGrid
                                         x:Name="StepsDataGrid"
                                        
                                        AlternatingRowBackground="#F8F8F8"
                                         AutoGenerateColumns="False" 
                                        Background="White"
                                         BorderBrush="#EEEEEE"
                                        BorderThickness="0"
                                         CanUserAddRows="False"
                                        GridLinesVisibility="Horizontal"
                                         HeadersVisibility="Column"
                                        HorizontalScrollBarVisibility="Visible"
                                         RowHeaderWidth="0"
                                        SelectionChanged="StepsDataGrid_SelectionChanged">
                                    <DataGrid.Columns>
                                            <DataGridTextColumn
                                                Width="60"
                                                Binding="{Binding StepNumber}"
                                                Header="序号">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                        <Setter Property="Padding" Value="10,10" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                            <DataGridTextColumn
                                                Width="150"
                                                Binding="{Binding ReagentName}"
                                                Header="试剂名称">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                        <Setter Property="Padding" Value="10,10" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                            <DataGridTextColumn
                                                Width="100"
                                                Binding="{Binding TimeInSeconds}"
                                                Header="时间(秒)">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                        <Setter Property="Padding" Value="10,10" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                            <DataGridTextColumn
                                                Width="100"
                                                Binding="{Binding Priority}"
                                                Header="优先级">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                        <Setter Property="Padding" Value="10,10" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                            <DataGridTextColumn
                                                Width="100"
                                                Binding="{Binding BlowCount}"
                                                Header="吹风次数">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                        <Setter Property="Padding" Value="10,10" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                            <DataGridTextColumn
                                                Width="100"
                                                Binding="{Binding BlowText}"
                                                Header="是否吹风">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                        <Setter Property="Padding" Value="10,10" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!--  步骤详情  -->
                        <Border
                            Grid.Column="4"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="6"
                            Effect="{StaticResource SoftShadow}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  标题  -->
                                <Border
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Padding="10,10"
                                    Background="#007ACC"
                                    CornerRadius="5,5,0,0">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        Text="步骤详情" />
                                </Border>

                                <!--  详情表单  -->
                                <ScrollViewer
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    VerticalScrollBarVisibility="Auto">
                                    <StackPanel Margin="20,20">
                                        <Border
                                            Margin="0,0,0,15"
                                            Padding="15,15"
                                            Background="#F9F9F9"
                                            CornerRadius="4">
