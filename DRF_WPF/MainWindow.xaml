                                                    Width="90" Height="38" Background="#1E88E5" Foreground="White" BorderThickness="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" 
                                                               FontSize="15" VerticalAlignment="Center"/>
                                                    <TextBlock Text="保存" Margin="8,0,0,0" 
                                                               FontSize="14" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="4"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                            
                                            <Button x:Name="BtnNewUser" Margin="0,0,10,0" Click="BtnNewUser_Click"
                                                    Width="90" Height="38" Background="#4CAF50" Foreground="White" BorderThickness="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" 
                                                               FontSize="15" VerticalAlignment="Center"/>
                                                    <TextBlock Text="新用户" Margin="8,0,0,0" 
                                                               FontSize="14" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="4"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                            
                                            <Button x:Name="BtnDeleteUser" Click="BtnDeleteUser_Click"
                                                    Width="90" Height="38" Background="#E53935" Foreground="White" BorderThickness="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" 
                                                               FontSize="15" VerticalAlignment="Center"/>
                                                    <TextBlock Text="删除" Margin="8,0,0,0" 
                                                               FontSize="14" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="4"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
